{
  "functions": {
    "source": "infra/functions",
    "runtime": "nodejs20"
  },
  "firestore": {
    "rules": "infra/firestore-rules/firestore.rules",
    "indexes": "infra/firestore-rules/firestore.indexes.json"
  },
  "storage": {
    "rules": "infra/storage-rules/storage.rules"
  },
  "hosting": {
    "public": "apps/web/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8081
    },
    "storage": {
      "port": 9199
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}
