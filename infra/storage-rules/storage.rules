rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Branding assets: public read, authenticated tenant-scoped write
    match /tenants/{tenantId}/branding/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
        && request.auth.token.tenant_id == tenantId
        && (request.auth.token.role == 'super_admin' || request.auth.token.role == 'platform_admin');
    }

    // Default: deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
